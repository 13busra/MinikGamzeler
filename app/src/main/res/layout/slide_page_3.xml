<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Screen2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Dernek faaliyetlerimizi “mesleğimizin sadakasını vermek” olarak değerlendiriyor ve tamamen gönüllü olarak çalışıyoruz. Sizler de bu ekipte görev almak için bu bölümden başvuru yapabilirsiniz."
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/gonullu_form_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:layout_gravity="center"
            android:text="Gönüllü Formu"
android:onClick="slideScreenButtonClick"

            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>